<div class="container search">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <h2>Songs</h2>
      </div>
      <div class="col-md-6">
        <%= form_tag(songs_path, :method => "get", id: "search-form") do %>
        	<%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search songs by title" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="row song">
      <div class="col-md-12">
       <% @songs.each do |song| %>
        <div class="col-md-4">  
        <%= link_to song do %>
            <div class="song-panel">
              <img src="<%= song.image %>" alt="" class="img-responsive">
              <div class="song-summary">
                <h4><%= song.title %></h4>
                <p>
                  <%= song.artist %><% if !song.features.empty? %> (feat. <%= song.features %>)<% end %><br>
                  Prod: <%= song.producers %>  
                </p>
              </div>
            </div>
        <% end %>
        </div>
        <% end %>
      </div>
    </div>
</div>