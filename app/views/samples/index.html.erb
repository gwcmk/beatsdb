<div class="container search">
  <%= form_tag(samples_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search samples by title" %>
  <% end %>
</div>

<div class="container">
    <div class="row sample">
      <div class="col-md-12">
       <% @samples.each do |sample| %>
        <div class="col-md-4">
          <div class="sample-panel">
            <%= sample.artist %><br>
            <%= link_to "View page", sample %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>