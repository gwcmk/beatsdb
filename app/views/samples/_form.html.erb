<div class="form-group">
  <%= f.label :starting_time %><br>
  <%= f.text_field :starting_time, class: 'form-control', :placeholder => "When does this sample first occur in the song? (ex: 0:20)" %>
</div>

<div class="form-group">
  <%= f.label :other_times %><br>
  <%= f.text_field :other_times, class: 'form-control', :placeholder => "At what other times does this sample occur in the song? Separate times with commas." %>
</div>

<div class="form-group">
  <%= f.label :artist %><br>
  <%= f.text_field :artist, class: 'form-control', :placeholder => "Include all artists and features" %>
</div>

<div class="form-group">
  <%= f.label :url %><br>
  <%= f.text_field :url, class: 'form-control', :placeholder => "Enter a YouTube URL or a spotify embed URL" %>
</div>

<div class="form-group">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: 'form-control', :placeholder => "Describe this sample. \nHow did the producer find it? \nIs there any relevance to the subject matter of the song? \netc." %>
</div>

<div class="form-group">
  <%= f.label :song_id %><br>
  <%= f.text_field :song_id, class: 'form-control', :placeholder => "Enter the corresponding song's ID" %>
</div>

<div class="form-group">
  <%= f.submit class: 'btn btn-primary' %>
</div>