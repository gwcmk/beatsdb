<div class="form-group">
  <%= f.label :time %><br>
  <%= f.text_field :time, class: 'form-control', :placeholder => "When does this sample occur in the song? (0:00 - 0:45)" %>
</div>

<div class="form-group">
  <%= f.label :artist %><br>
  <%= f.text_field :artist, class: 'form-control', :placeholder => "Include all artists and features" %>
</div>

<div class="form-group">
  <%= f.label :url %><br>
  <%= f.text_field :url, class: 'form-control', :placeholder => "Enter a YouTube URL or a spotify embed URL" %>
</div>

<div class="form-group">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: 'form-control', :placeholder => "Describe this sample. \nHow did the producer find it? \nIs there any relevance to the subject matter of the song? \netc." %>
</div>

<div class="form-group">
  <%= f.label :song_id %><br>
  <%= f.text_field :song_id, class: 'form-control', :placeholder => "Enter the corresponding song's ID" %>
</div>

<div class="form-group">
  <%= f.submit class: 'btn btn-primary' %>
</div>